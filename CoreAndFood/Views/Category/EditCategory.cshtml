@model CoreAndFood.Models.Category

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Update Category</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div style="margin:2rem">
            <form asp-action="UpdateCategory" method="post">
                <div class="form-group" style="display:none">
                    <label asp-for="CategoryId">Category Id:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="CategoryId" value=@Model.CategoryId class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName">Category Name:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="CategoryName" value=@Model.CategoryName class="form-control" style="width:30vw" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div style="height:1rem;"></div>
                <button type="submit" class="btn btn-primary">Update Category</button>
            </form>
        </div>
    </div>
</body>