@model CoreAndFood.Models.Food

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<head>
    <title>Update Food</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container-fluid">
        <div style="margin:2rem">
            <form asp-action="EditFood" method="post">
                <div class="form-group" style="display:none">
                    <label asp-for="FoodId">Food Id:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="FoodId" value="@Model.FoodId" class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Food Name:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="Name" value="@Model.Name" class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="Price" value="@Model.Price" class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category Name:</label>
                    <select asp-for="Category.CategoryId" class="form-control" style="width:30vw">
                        <option value="">Select a Category</option>
                        @foreach (var x in ViewBag.values)
                        {
                            if (@x.Value == ViewBag.categ)
                            {
                                <option selected="selected" value="@x.Value">@x.Text</option>
                            }
                            else
                            {
                                <option value="@x.Value">@x.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl">Image URL:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="ImgUrl" value="@Model.ImgUrl" class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="Stock">Stock:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="Stock" value="@Model.Stock" class="form-control" style="width:30vw" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <div style="height:.5rem;"></div>
                    <input asp-for="Description" value="@Model.Description" class="form-control" style="width:30vw" />
                </div>
                <div style="height:1rem;"></div>
                <button class="btn btn-warning">Update Food</button>
            </form>
        </div>
    </div>
</body>